# ─── Stalker Portal credentials ───────────────────────────────────────────────
# Copy this file to .env and fill in your values.
# Environment variables take priority over config.json.

PORTAL_URL=http://your-portal-url/portal.php
PORTAL_MAC=00:00:00:00:00:00
PORTAL_TOKEN=your_token_here
PORTAL_PREHASH=your_prehash_here
PORTAL_DEVICE_ID=your_device_id_here
